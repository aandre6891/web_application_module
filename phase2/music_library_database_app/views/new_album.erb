    <body>
      <h1>Add a new Album:</h1>
      <form method="POST" action="/albums"><br/>
      
      <div>
        <label>Title:</label>
        <input type="text" name="album_title" />
      </div>
      
      <div>
        <label>Release year:</label>
        <input type="text" name="album_release_year" />
      </div>
      
      <div>
        <label>Artist ID:</label>
        <input type="text" name="album_artist_id" />
      </div>
      
      <input type="submit" />
      
      </form>
    </body>
</html>